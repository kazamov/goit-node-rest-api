{
    "name": "goit-node-rest-api",
    "type": "module",
    "module": "./dist/app.mjs",
    "exports": {
        "import": {
            "types": "./dist/app.d.mts",
            "default": "./dist/app.mjs"
        }
    },
    "author": {
        "name": "Zakir Nuriiev",
        "email": "kazamov@gmail.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/kazamov/goit-node-rest-api"
    },
    "license": "UNLICENSED",
    "engines": {
        "node": "22.14.0"
    },
    "scripts": {
        "build": "pkgroll --clean-dist --sourcemap --minify",
        "start": "node ./dist/app.mjs",
        "dev": "tsx --watch ./src/app.ts",
        "type-check": "tsc --noEmit",
        "format": "prettier --write ./src/**/*.ts",
        "format:check": "prettier --check ./src/**/*.ts",
        "lint": "eslint src/** --fix",
        "test": "vitest",
        "coverage": "vitest --coverage",
        "e2e": "playwright test",
        "e2e:debug": "playwright test --debug",
        "db:test:start": "docker compose -f docker-compose.test.yml --env-file .env.test up -d",
        "db:test:stop": "docker compose -f docker-compose.test.yml --env-file .env.test down",
        "prepare": "is-ci || husky"
    },
    "dependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/gravatar": "^1.8.6",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/morgan": "^1.9.9",
        "@types/multer": "^1.4.12",
        "bcrypt": "^5.1.1",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^4.21.2",
        "gravatar": "^1.8.2",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "pg": "^8.13.3",
        "pg-hstore": "^2.3.4",
        "sequelize": "^6.37.5",
        "uuid": "^11.0.5",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@eslint/js": "^9.20.0",
        "@faker-js/faker": "^9.5.1",
        "@playwright/test": "^1.50.1",
        "@tsconfig/node22": "^22.0.0",
        "@types/node": "^22.13.2",
        "@vitest/coverage-v8": "^3.0.7",
        "eslint": "^9.20.1",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "eslint-plugin-unused-imports": "^4.1.4",
        "husky": "^9.1.7",
        "is-ci": "^4.1.0",
        "lint-staged": "^15.4.3",
        "pkgroll": "^2.10.0",
        "prettier": "^3.5.1",
        "tsx": "^4.19.2",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.24.0",
        "vitest": "^3.0.7"
    }
}
